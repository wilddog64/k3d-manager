apiVersion: install.istio.io/v1alpha1
kind: IstioOperator
metadata:
  namespace: istio-system
  name: istio-control-plane
spec:
  profile: default
  components:
    pilot:
      k8s:
        resources:
          requests:
            cpu: "${PILOT_K8S_CPU}" # 100m
            memory: "${PILOT_K8S_MEM}" # 256Mi
    ingressGateways:
      - name: istio-ingressgateway
        enabled: true
        k8s:
          resources:
            requests:
              cpu: "${ING_K8S_CPU}" # 100m
              memory: "${ING_K8S_MEM}" # 256Mi
          service:
            type: LoadBalancer
  values:
    global:
      proxy:
        resources:
          requests:
            cpu: "${GLO_PROXY_CPU}" # 50m
            memory: "${GLO_PROXY_MEM}" # 64Mi
