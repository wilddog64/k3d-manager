apiVersion: v1
kind: PersistentVolume
metadata:
  name: jenkins-home-pv
  namespace: $JENKINS_NAMESPACE
spec:
  capacity:
    storage: 5Gi
  accessModes:
    - ReadWriteOnce
  hostPath:
    path: "$JENKINS_HOME_PATH"
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: jenkins-home
  namespace: $JENKINS_NAMESPACE
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 5Gi
  volumeName: jenkins-home-pv
