---
# Jenkins Agent Service - JNLP endpoint for agent connections
# Agents connect to this service on port 50000 using JNLP protocol

apiVersion: v1
kind: Service
metadata:
  name: jenkins-agent
  namespace: ${JENKINS_NAMESPACE}
  labels:
    app: jenkins
    component: agent-service
spec:
  type: ClusterIP
  ports:
    - port: 50000
      targetPort: 50000
      protocol: TCP
      name: agent
  selector:
    app.kubernetes.io/name: jenkins
    app.kubernetes.io/instance: jenkins
