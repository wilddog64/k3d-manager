apiVersion: ${ARGOCD_ESO_API_VERSION}
kind: ExternalSecret
metadata:
  name: ${ARGOCD_ADMIN_SECRET_NAME}
  namespace: ${ARGOCD_NAMESPACE}
spec:
  refreshInterval: 1h
  secretStoreRef:
    kind: SecretStore
    name: ${ARGOCD_ESO_SECRETSTORE}
  target:
    name: ${ARGOCD_ADMIN_SECRET_NAME}
    creationPolicy: Owner
  data:
    - secretKey: password
      remoteRef:
        key: ${ARGOCD_ADMIN_VAULT_PATH}
        property: ${ARGOCD_ADMIN_PASSWORD_KEY}
